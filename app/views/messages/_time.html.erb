<% if (Time.now - message.created_at) <= 60 * 60 %>
  <%= ((Time.now - message.created_at) / 60).to_i.to_s + "分前" %>
<% elsif (Time.now - message.created_at) <= 60 * 60 * 24 %>
  <%= ((Time.now - message.created_at) / 3600).to_i.to_s + "時間前" %>
<% elsif (Date.today - message.created_at.to_date) <= 30 %>
  <%= (Date.today - message.created_at.to_date).to_i.to_s + "日前" %>
<% else %>
  <%= message.created_at %>
<% end %>